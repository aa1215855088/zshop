<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hnguigu.zshop.dao.OrderDao">
    <insert id="save">
        insert into t_order (id, no, customer_id, prcie, create_date)
        values (#{id}, #{no}, #{customer.id}, #{price}, #{createDate});
    </insert>
    <select id="getOrderByUserId" resultType="order">
        select *
        from t_order
        where customer_id = #{loginName};
    </select>
</mapper>